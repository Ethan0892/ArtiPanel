# ArtiPanel API Configuration
# Copy this file to .env and update values as needed

# Application
APP_NAME=ArtiPanel
APP_VERSION=0.1.0-alpha.1
NODE_ENV=development
DEBUG=false

# Server
PORT=4000
HOST=0.0.0.0
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=artipanel
DB_USER=artipanel
DB_PASSWORD=changeme
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_EXPIRE=30d

# 2FA/TOTP
TOTP_WINDOW=1
TOTP_TIME_STEP=30

# SSL/TLS Certificates
SSL_ENABLED=false
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
SSL_AUTO_RENEWAL=true

# SMTP (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@artipanel.dev
SMTP_FROM_NAME=ArtiPanel

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ADAPTIVE=true

# Security
ENCRYPTION_ALGORITHM=aes-256-gcm
PASSWORD_HASH_ROUNDS=10
SESSION_TIMEOUT_MS=3600000
SESSION_SECRET=your-session-secret-change-this
PASSWORD_SALT=your-password-salt-change-this
DEFAULT_ADMIN_PASSWORD=change-this-to-a-strong-password-in-production

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_ARCHIVE=true

# API Keys
API_KEY_ROTATION_ENABLED=true
API_KEY_EXPIRATION_DAYS=365

# Docker
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_HOST=unix:///var/run/docker.sock

# Node Management
NODE_HEARTBEAT_INTERVAL=30000
NODE_HEALTH_CHECK_TIMEOUT=10000

# Monitoring
METRICS_ENABLED=true
METRICS_INTERVAL=60000
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Features
FEATURE_GAMING_SERVERS=true
FEATURE_NAS_MANAGEMENT=false
FEATURE_KUBERNETES=false
FEATURE_AUTO_SCALING=false

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_PATH=/var/lib/artipanel/backups

# Updates
UPDATE_CHECK_INTERVAL=86400000
UPDATE_CHANNEL=stable
AUTO_UPDATE=false
UPDATE_PRERELEASE=false

# Third-party Services
# AWS
AWS_ENABLED=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Google Cloud
GCP_ENABLED=false
GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY=

# Azure
AZURE_ENABLED=false
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
